import numpy as np
import matplotlib.pyplot as plt


x = np.arange(50)
y = np.arange(50) + np.random.randint(0, 30, 50)

plt.rcParams.update({'figure.figsize': (10, 8), 'figure.dpi': 100})


plt.scatter(x, y, c=y, cmap='Spectral')


plt.colorbar()


plt.title('Simple Scatter Plot')
plt.xlabel('X - value')
plt.ylabel('Y - value')

plt.show()
